            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <TextBox x:Name="textBox1" Style="{DynamicResource GlassTextBoxThree}" HorizontalAlignment="Left" Height="58" Margin="157,157,0,0" TextWrapping="Wrap" Text="10.4.1.47" VerticalAlignment="Top" Width="257" IsEnabled="False">
