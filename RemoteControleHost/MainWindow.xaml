        <Button x:Name="button2" Style="{DynamicResource btn3DStyle}" Content="Stop" HorizontalAlignment="Left" Margin="242,57,0,0" VerticalAlignment="Top" Width="133" Click="button2_Click" Height="74"/>
        <Label x:Name="label1" Content="Server now is: " HorizontalAlignment="Left" Margin="10,-1,0,0" VerticalAlignment="Top" Width="204" Foreground="#FF0C02D6" FontSize="32"/>
