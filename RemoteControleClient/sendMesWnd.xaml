<Window x:Class="RemoteControleClient.sendMesWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           Title="Message" Height="166.067" Width="426">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF058D8D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Message text:" HorizontalAlignment="Left" Margin="0,21,0,0" VerticalAlignment="Top" Height="38" Width="115" FontFamily="Vijaya" FontSize="21.333"/>
        <TextBox x:Name="mesBox" Style="{DynamicResource GlassTextBoxOne}" HorizontalAlignment="Left" Height="35" Margin="115,21,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="303" FontSize="16"/>
        <Button Style="{DynamicResource GlassButtonOne}" Content="OK" HorizontalAlignment="Left" Margin="199,62,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
